<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  controllerName="sap.ui.demo.tracker.view.IssueEdit"
	displayBlock="true"
	xmlns="sap.m">
  <Page>
    <core:Fragment fragmentName="sap.ui.demo.tracker.view.IssueEditForm" type="XML"/>
    <footer>
      <Bar>
        <contentRight>
          <Button text="{i18n>ISSUECREATE_SAVE_BUTTON_TEXT}" press="handleSavePress" />
          <Button text="{i18n>ISSUECREATE_CANCEL_BUTTON_TEXT}" press="handleCancelPress" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>