<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  controllerName="sap.ui.demo.tracker.view.IssueCreate"
	displayBlock="true"
	xmlns="sap.m">
  <Page>
    <form:SimpleForm>
      <form:content>
        <Label text="{i18n>ISSUE_DETAIL_TITLE}" />
        <Input text="{Name}" />
        <Label text="{i18n>ISSUE_DETAIL_DESCRIPTION}" />
        <Input text="{Description}" />
        <Label text="{i18n>ISSUE_DETAIL_PRIORITY}" />
        <Select>
          <items>
            <core:Item text="High" />
            <core:Item text="Medium" />
            <core:Item text="Low" />
          </items>
        </Select>
        <Label text="{i18n>ISSUE_DETAIL_OWNER}" />
        <Select>
          <items>
            <core:Item text="John Smith" />
            <core:Item text="Mary Jane" />
            <core:Item text="Jane Doe" />
          </items>
        </Select>
        <Text text="{Owner}" />
      </form:content>
    </form:SimpleForm>
    <footer>
      <Bar>
        <contentRight>
          <Button text="{i18n>ISSUECREATE_SAVE_BUTTON_TEXT}" press="handleSavePress" />
          <Button text="{i18n>ISSUECREATE_CANCEL_BUTTON_TEXT}" press="handleCancelPress" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>