<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  controllerName="sap.ui.demo.tracker.view.IssueCreate"
	displayBlock="true"
	xmlns="sap.m">
  <Page>
    <form:SimpleForm>
      <form:content>
        <Title text="{i18n>ADD_ISSUE_TITLE}" />
        <Label text="{i18n>ISSUE_DETAIL_TITLE}" />
        <Input text="{newIssue>Name}" />
        <Label text="{i18n>ISSUE_DETAIL_DESCRIPTION}" />
        <Input text="{newIssue>Description}" />
        <Label text="{i18n>ISSUE_DETAIL_PRIORITY}" />
        <Select items="{newIssueOptions>/priorities}">
          <core:Item text="{newIssueOptions>priority}" key="{newIssueOptions>key}" />
        </Select>
        <Label text="{i18n>ISSUE_DETAIL_OWNER}" />
        <Select items="{newIssueOptions>/owners}" >
          <core:Item text="{newIssueOptions>owner}" key="{newIssueOptions>key}" />
        </Select>
      </form:content>
    </form:SimpleForm>
    <footer>
      <Bar>
        <contentRight>
          <Button text="{i18n>ISSUECREATE_SAVE_BUTTON_TEXT}" press="handleSavePress" />
          <Button text="{i18n>ISSUECREATE_CANCEL_BUTTON_TEXT}" press="handleCancelPress" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>